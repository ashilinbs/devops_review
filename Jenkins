pipeline {
    agent any

    environment {
        NODEJS_HOME = tool 'nodejs-23'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
        IMAGE_NAME = "signup"
        CONTAINER_NAME = "signup"
    }

    stages {
        stage('Checkout from Master') {
            steps {
                script {
                    sh """
                    rm -rf Devops_Training
                    git clone --branch master https://github.com/VIBUDESH07/Devops_Training.git
                    """
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('Devops_Training/Devops') {
                    sh 'npm install'
                }
            }
        }

        stage('Build App') {
            steps {
                dir('Devops_Training/Devops') {
                    sh 'npm run build'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('Devops_Training/Devops') {
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Run Docker Container (No Port Exposure)') {
            steps {
                script {
                    sh """
                    docker rm -f ${CONTAINER_NAME} || true
                    docker run -d --name ${CONTAINER_NAME} ${IMAGE_NAME}
                    """
                }
            }
        }
    }
}
